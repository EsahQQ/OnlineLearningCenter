@model OnlineLearningCenter.BusinessLogic.DTOs.CourseDto

@{
    ViewData["Title"] = "Удаление курса";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить этот курс?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Сложность</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Difficulty)</dd>

        <dt class="col-sm-2">Категория</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>

        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

        <dt class="col-sm-2">Преподаватель</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.InstructorName)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Отмена</a>
    </form>
</div>