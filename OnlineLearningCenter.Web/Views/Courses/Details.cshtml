@model OnlineLearningCenter.Web.ViewModels.CourseDetailsViewModel

@{
    ViewData["Title"] = "Детали курса";
}

<h1>Детали курса</h1>

<div>
    <h4>@Model.Course.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">
            Сложность
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Difficulty)
        </dd>
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Category)
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Status)
        </dd>
        <dt class="col-sm-2">
            Преподаватель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.InstructorName)
        </dd>
    </dl>
</div>

@if (Model.Analytics != null)
{
    <hr />
    <h3>Статистика по курсу</h3>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">Студентов на курсе</div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Analytics.TotalStudentsEnrolled</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">Завершили курс</div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Analytics.StudentsCompleted</h2>
                    @if (Model.Analytics.TotalStudentsEnrolled > 0)
                    {
                        var completionRate = (double)Model.Analytics.StudentsCompleted / Model.Analytics.TotalStudentsEnrolled * 100;
                        <p class="card-text">(@completionRate.ToString("F1") %)</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">Средний балл по курсу</div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Analytics.AverageScoreForCourse.ToString("F2")</h2>
                </div>
            </div>
        </div>
    </div>
}

<hr />
<h3>Модули курса</h3>
<p>
    <a asp-controller="Modules" asp-action="Create" asp-route-courseId="@Model.Course.CourseId" class="btn btn-success">
        Добавить модуль
    </a>
</p>

<table class="table">
    <thead><tr><th>#</th><th>Название</th><th></th></tr></thead>
    <tbody>
        @foreach (var module in Model.Modules)
        {
            <tr>
                <td>@module.OrderNumber</td>
                <td>@module.Title</td>
                <td class="text-nowrap">
                    <a asp-controller="Tests" asp-action="Index" asp-route-moduleId="@module.ModuleId" class="btn btn-sm btn-outline-info" title="Управлять тестами">
                        <i class="bi bi-card-checklist"></i> Тесты
                    </a>
                    <a asp-controller="Modules" asp-action="Edit" asp-route-id="@module.ModuleId" class="btn btn-sm btn-outline-warning" title="Редактировать модуль">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-controller="Modules" asp-action="Delete" asp-route-id="@module.ModuleId" class="btn btn-sm btn-outline-danger" title="Удалить модуль">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Course?.CourseId">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>