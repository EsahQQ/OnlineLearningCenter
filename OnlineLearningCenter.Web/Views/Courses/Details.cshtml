@model OnlineLearningCenter.Web.ViewModels.CourseDetailsViewModel

@{
    ViewData["Title"] = "Детали курса";
}

<h1>Детали курса</h1>

<div>
    <h4>@Model.Course.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">
            Сложность
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Difficulty)
        </dd>
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Category)
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Status)
        </dd>
        <dt class="col-sm-2">
            Преподаватель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.InstructorName)
        </dd>
    </dl>
</div>

@if (Model.Analytics != null)
{
    <hr />
    <h3>Статистика по курсу</h3>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">Студентов на курсе</div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Analytics.TotalStudentsEnrolled</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">Завершили курс</div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Analytics.StudentsCompleted</h2>
                    @if (Model.Analytics.TotalStudentsEnrolled > 0)
                    {
                        var completionRate = (double)Model.Analytics.StudentsCompleted / Model.Analytics.TotalStudentsEnrolled * 100;
                        <p class="card-text">(@completionRate.ToString("F1") %)</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">Средний балл по курсу</div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Analytics.AverageScoreForCourse.ToString("F2")</h2>
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Course?.CourseId">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>