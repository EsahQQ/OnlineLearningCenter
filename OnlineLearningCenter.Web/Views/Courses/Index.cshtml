@model OnlineLearningCenter.BusinessLogic.Helpers.PaginatedList<OnlineLearningCenter.BusinessLogic.DTOs.CourseDto>

@{
    ViewData["Title"] = "Список курсов";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md">
            <label for="category" class="form-label">Категория</label>
            @Html.DropDownList("category", ViewBag.Categories as SelectList, "Все категории", new { @class = "form-select" })
        </div>
        <div class="col-md">
            <label for="difficulty" class="form-label">Сложность</label>
            @Html.DropDownList("difficulty", ViewBag.Difficulties as SelectList, "Любая сложность", new { @class = "form-select" })
        </div>
        <div class="col-md">
            <label for="instructorId" class="form-label">Преподаватель</label>
            @Html.DropDownList("instructorId", ViewBag.Instructors as SelectList, "Все преподаватели", new { @class = "form-select" })
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="showOnlyActive" value="true" id="showOnlyActiveCheck" @(ViewBag.ShowOnlyActive ? "checked" : "")>
                    <label class="form-check-label" for="showOnlyActiveCheck">
                        Показывать только активные курсы
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-auto">
            <button type="submit" class="btn btn-primary">Применить</button>
            <a asp-action="Index" class="btn btn-secondary">Сбросить</a>
        </div>
    </div>
</form>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Создать новый курс</a>
    </p>
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="width: 100%">Название</th>
            <th>Категория</th>
            <th>Сложность</th>
            <th>Статус</th>
            <th>Преподаватель</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="white-space: nowrap">@Html.DisplayFor(modelItem => item.Title)</td>
                <td style="white-space: nowrap">@Html.DisplayFor(modelItem => item.Category)</td>
                <td style="white-space: nowrap">@Html.DisplayFor(modelItem => item.Difficulty)</td>
                <td style="white-space: nowrap">
                    @{
                        string badgeClass = "bg-secondary"; 
                        if (item.Status == "Активен") { badgeClass = "bg-success"; }
                        else if (item.Status == "В разработке") { badgeClass = "bg-info text-dark"; }
                                }
                    <span class="badge @badgeClass">@item.Status</span>
                </td>
                <td style="white-space: nowrap">@Html.DisplayFor(modelItem => item.InstructorName)</td>

                <td class="text-nowrap">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-sm btn-warning" title="Редактировать">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-sm btn-danger" title="Удалить">
                            <i class="bi bi-trash3"></i>
                        </a>
                    }
                    <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-sm btn-secondary" title="Детали">
                        <i class="bi bi-info-circle"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<partial name="_Pagination" model="Model" />
