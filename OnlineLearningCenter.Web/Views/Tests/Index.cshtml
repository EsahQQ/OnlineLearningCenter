@model IEnumerable<TestDto>

@{
    ViewData["Title"] = "Управление тестами";
}

<h1>@ViewData["Title"]</h1>
<h4>для модуля "@ViewBag.ModuleTitle"</h4>
<hr />

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" asp-route-moduleId="@ViewBag.ModuleId" class="btn btn-success">Добавить тест</a>
    </p>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th class="w-100">Название теста</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var test in Model)
        {
            <tr>
                <td>@test.Title</td>
                <td class="text-nowrap">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@test.TestId" class="btn btn-sm btn-warning" title="Редактировать"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-route-id="@test.TestId" class="btn btn-sm btn-danger" title="Удалить"><i class="bi bi-trash3"></i></a>
                    }

                    <a asp-controller="TestResults" asp-action="Index" asp-route-testId="@test.TestId" class="btn btn-sm btn-success" title="Результаты"><i class="bi bi-bar-chart-steps"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Courses" asp-action="Details" asp-route-id="@ViewBag.CourseId" class="btn btn-secondary">Назад к курсу</a>
</div>