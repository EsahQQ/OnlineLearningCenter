@model IEnumerable<TestResultDto>

@{
    ViewData["Title"] = "Результаты теста";
}

<h1>@ViewData["Title"]</h1>
<h4>"@ViewBag.TestTitle"</h4>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Студент</th>
            <th>Балл</th>
            <th>Дата прохождения</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Students" asp-action="Details" asp-route-id="@result.StudentId">
                        @result.StudentFullName
                    </a>
                </td>
                <td>@result.Score</td>
                <td>@result.CompletionDate</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" asp-route-moduleId="@ViewBag.ModuleId" class="btn btn-secondary">Назад к списку тестов</a>
</div>