@model IEnumerable<TestResultDto>

@{
    ViewData["Title"] = "Результаты теста";
}

<h1>@ViewData["Title"]</h1>
<h4>"@ViewBag.TestTitle"</h4>
<hr />

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-controller="TestResults" asp-action="Create" asp-route-testId="@ViewBag.TestId" class="btn btn-success">
            Добавить результат
        </a>
    </p>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th style="width: 100%">Студент</th>
            <th class="text-nowrap">Балл</th>
            <th class="text-nowrap">Дата прохождения</th>
            <th class="text-nowrap"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Students" asp-action="Details" asp-route-id="@result.StudentId">
                        @result.StudentFullName
                    </a>
                </td>
                <td>@result.Score</td>
                <td>@result.CompletionDate</td>
                <td class="text-nowrap">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="TestResults" asp-action="Edit" asp-route-id="@result.TestResultId" class="btn btn-sm btn-warning" title="Редактировать"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="TestResults" asp-action="Delete" asp-route-id="@result.TestResultId" class="btn btn-sm btn-danger" title="Удалить"><i class="bi bi-trash3"></i></a>
                }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" asp-route-moduleId="@ViewBag.ModuleId" class="btn btn-secondary">Назад к списку тестов</a>
</div>