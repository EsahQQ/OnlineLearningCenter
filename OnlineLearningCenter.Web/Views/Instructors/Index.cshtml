@model OnlineLearningCenter.BusinessLogic.Helpers.PaginatedList<OnlineLearningCenter.BusinessLogic.DTOs.InstructorDto>

@{
    ViewData["Title"] = "Преподаватели";
}

<h1>Список преподавателей</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить преподавателя</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="width: 100%">ФИО</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.InstructorId" class="btn btn-sm btn-warning" title="Редактировать">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.InstructorId" class="btn btn-sm btn-danger" title="Удалить">
                        <i class="bi bi-trash3"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.InstructorId" class="btn btn-sm btn-secondary" title="Детали">
                        <i class="bi bi-info-circle"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Pagination" model="Model" />