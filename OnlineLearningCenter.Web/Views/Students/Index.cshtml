@model IEnumerable<OnlineLearningCenter.BusinessLogic.DTOs.StudentDto>

@{
    ViewData["Title"] = "Студенты";
}

<h1>Список студентов</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить студента</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ФИО</th>
            <th>Email</th>
            <th>Дата регистрации</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.RegistrationDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentId">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.StudentId">Прогресс</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudentId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>