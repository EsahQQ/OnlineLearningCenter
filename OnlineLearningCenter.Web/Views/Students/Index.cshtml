@model OnlineLearningCenter.BusinessLogic.Helpers.PaginatedList<OnlineLearningCenter.BusinessLogic.DTOs.StudentDto>

@{
    ViewData["Title"] = "Студенты";
}

<h1>Список студентов</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Добавить студента</a>
    </p>
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="width: 30%">ФИО</th>
            <th style="width: 50%">Email</th>
            <th style="width: 20%">Дата регистрации</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.RegistrationDate)</td>
                <td class="text-nowrap">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-warning" title="Редактировать">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-sm btn-danger" title="Удалить">
                            <i class="bi bi-trash3"></i>
                        </a>
                    }
                    <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-sm btn-secondary" title="Детали">
                        <i class="bi bi-info-circle"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Pagination" model="Model" />