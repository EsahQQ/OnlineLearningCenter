@model OnlineLearningCenter.BusinessLogic.DTOs.StudentDto

@{
    ViewData["Title"] = "Удаление студента";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить этого студента?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ФИО</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Дата регистрации</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RegistrationDate)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Отмена</a>
    </form>
</div>