@model IEnumerable<OnlineLearningCenter.BusinessLogic.DTOs.StudentCourseProgressDto>

@{
    ViewData["Title"] = "Прогресс студента";
    var student = ViewBag.Student as OnlineLearningCenter.BusinessLogic.DTOs.StudentDto;
}

<h1>Прогресс студента</h1>

@if (student != null)
{
    <div>
        <h4>@student.FullName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@student.Email</dd>
            <dt class="col-sm-2">Дата регистрации</dt>
            <dd class="col-sm-10">@student.RegistrationDate</dd>
        </dl>
    </div>
}


<h4 class="mt-4">Прогресс по курсам</h4>

@if (!Model.Any())
{
    <p>Студент не записан ни на один курс.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название курса</th>
                <th>Прогресс по модулям</th>
                <th>Средний балл по тестам</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.CourseId">
                            @Html.DisplayFor(modelItem => item.CourseTitle)
                        </a>
                    </td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @item.ModulesCompletedProgress.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)%;" aria-valuenow="@item.ModulesCompletedProgress" aria-valuemin="0" aria-valuemax="100">
                                @item.ModulesCompletedProgress.ToString("0.##")%
                            </div>
                        </div>
                    </td>
                    <td>
                        @item.AverageTestScore.ToString("F2")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    @if (student != null)
    {
        <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-secondary">Редактировать профиль</a>
    }
    <a asp-action="Index" class="btn btn-outline-secondary">Назад к списку студентов</a>
</div>