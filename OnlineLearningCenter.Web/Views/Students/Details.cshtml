@model IEnumerable<OnlineLearningCenter.BusinessLogic.DTOs.StudentCourseProgressDto>
@using OnlineLearningCenter.BusinessLogic.DTOs

@{
    ViewData["Title"] = "Прогресс студента";
    var student = ViewBag.Student as OnlineLearningCenter.BusinessLogic.DTOs.StudentDto;
}

<h1>Прогресс студента</h1>

@if (student != null)
{
    <div>
        <h4>@student.FullName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@student.Email</dd>
            <dt class="col-sm-2">Дата регистрации</dt>
            <dd class="col-sm-10">@student.RegistrationDate</dd>
        </dl>
    </div>
}



<h4 class="mt-4">Прогресс по курсам</h4>

@if (User.IsInRole("Admin"))
{
    <div class="mb-3">
        <a asp-controller="Enrollments" asp-action="Create" asp-route-studentId="@student.StudentId" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Записать на новый курс
        </a>
    </div>
}
<hr />

@if (!Model.Any())
{
    <p>Студент не записан ни на один курс.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название курса</th>
                <th>Прогресс по модулям</th>
                <th>Средний балл по тестам</th>
                <th>Сертификат</th>
                @if (User.IsInRole("Admin"))
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.CourseId">
                            @Html.DisplayFor(modelItem => item.CourseTitle)
                        </a>
                    </td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @item.ModulesCompletedProgress.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)%;" aria-valuenow="@item.ModulesCompletedProgress" aria-valuemin="0" aria-valuemax="100">
                                @item.ModulesCompletedProgress.ToString("0.##")%
                            </div>
                        </div>
                    </td>
                    <td>
                        @item.AverageTestScore.ToString("F2")
                    </td>
                    <td>
                        @{
                            var certificate = (ViewBag.Certificates as IEnumerable<CertificateDto>)
                            ?.FirstOrDefault(c => c.CourseId == item.CourseId);
                        }
                        @if (certificate != null)
                        {
                            <a href="@certificate.CertificateUrl" target="_blank" class="btn btn-sm btn-light" title="Просмотреть сертификат">
                                <i class="bi bi-patch-check-fill text-success"></i> Выдан
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Certificates" asp-action="Edit" asp-route-id="@certificate.CertificateId" class="btn btn-sm btn-light" title="Редактировать"><i class="bi bi-pencil"></i></a>
                                <a asp-controller="Certificates" asp-action="Delete" asp-route-id="@certificate.CertificateId" class="btn btn-sm btn-light" title="Аннулировать"><i class="bi bi-trash3"></i></a>
                            }
                        }
                        else if (item.ModulesCompletedProgress >= 100)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Certificates" asp-action="Create" asp-route-studentId="@ViewBag.Student.StudentId" asp-route-courseId="@item.CourseId" class="btn btn-sm btn-outline-success">
                                    <i class="bi bi-patch-plus"></i> Выдать
                                </a>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Недоступен</span>
                        }
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <form asp-controller="Enrollments" asp-action="Delete" method="post" onsubmit="return confirm('Вы уверены, что хотите отчислить студента с этого курса?');">
                            <input type="hidden" name="studentId" value="@student.StudentId" />
                            <input type="hidden" name="courseId" value="@item.CourseId" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Отчислить">
                                <i class="bi bi-person-dash"></i>
                            </button>
                        </form>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    @if (student != null)
    {
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-secondary">Редактировать профиль</a>
        }
    }
    <a asp-action="Index" class="btn btn-outline-secondary">Назад к списку студентов</a>
</div>