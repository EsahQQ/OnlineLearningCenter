@model OnlineLearningCenter.Web.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Управление ролями";
}

<h1>Управление ролями для пользователя: @Model.UserName</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input asp-for="UserId" type="hidden" />
            <div class="card">
                <div class="card-header">
                    <h2>Роли пользователя</h2>
                </div>

                <div class="card-body">
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="UserName" />

                    @foreach (var role in Model.Roles)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="selectedRole" value="@role.RoleName" id="role-@role.RoleName" @(role.IsSelected ? "checked" : "") />
                            <label class="form-check-label" for="role-@role.RoleName">
                                @role.RoleName
                            </label>
                        </div>
                    }
                </div>


                <div class="card-footer">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                </div>
            </div>
        </form>
    </div>
</div>