@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Удаление пользователя";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы уверены, что хотите удалить этого пользователя?</h3>
<p class="text-danger">Это действие нельзя будет отменить.</p>

<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Отмена</a>
    </form>
</div>