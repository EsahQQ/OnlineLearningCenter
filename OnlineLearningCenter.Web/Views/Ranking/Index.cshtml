@model OnlineLearningCenter.BusinessLogic.Helpers.PaginatedList<OnlineLearningCenter.BusinessLogic.DTOs.StudentRankingDto>

@{
    ViewData["Title"] = "Рейтинг студентов";
    string title = ViewBag.SelectedCourseId == null
        ? "Общий рейтинг студентов"
        : $"Рейтинг по курсу: \"{ViewBag.SelectedCourseTitle}\"";
}

<h1>@title</h1>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-6">
            <label for="courseId" class="form-label">Показать рейтинг для курса:</label>
            @Html.DropDownList("courseId", ViewBag.Courses as SelectList, "Общий рейтинг", new { @class = "form-select" })
        </div>
        <div class="col-md-auto">
            <button type="submit" class="btn btn-primary">Показать</button>
            <a asp-action="Index" class="btn btn-secondary">Сбросить</a>
        </div>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-warning">Студенты, прошедшие тесты, не найдены. Рейтинг не может быть построен.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Студент</th>
                <th>Средний балл</th>
            </tr>
        </thead>
        <tbody>
            @{
                int rank = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(rank++)</td>
                    <td>
                        <a asp-controller="Students" asp-action="Details" asp-route-id="@item.StudentId">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </a>
                    </td>
                    <td>
                        @item.AverageScore.ToString("F2")
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_Pagination" model="Model" />
}