@model CreateCertificateDto
@{
    ViewData["Title"] = "Выдача сертификата";
}

<h1>@ViewData["Title"]</h1>
<h4>Студенту: @ViewBag.StudentName</h4>
<h5>За курс: @ViewBag.CourseTitle</h5>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="CourseId" />
            <div class="mb-3">
                <label asp-for="CertificateUrl" class="form-label"></label>
                <input asp-for="CertificateUrl" class="form-control" />
                <span asp-validation-for="CertificateUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Выдать" class="btn btn-primary" />
                <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>